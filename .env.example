# Service Configuration
SERVICE_TYPE=api  # Options: api, worker, both
PORT=8000  # Port for API service (Render sets this automatically)

# Mock Configuration
MOCK_FAILURE_RATE=0.23
MOCK_LATENCY_MIN=0.05
MOCK_LATENCY_MAX=0.2

# Redis Configuration (Required for Celery)
REDIS_URL=redis://localhost:6379/0  # Render provides this for Redis add-on
REDIS_HOST=localhost
REDIS_PORT=6379

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Python Configuration
PYTHON_VERSION=3.12.0
PYTHONUNBUFFERED=1

# Celery Configuration (Optional - uses defaults if not set)
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_RESULT_EXPIRES=86400  # Results expiration in seconds (default: 24 hours)

# Node Configuration (Frontend)
NODE_VERSION=18.18.0
